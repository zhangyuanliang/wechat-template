.primary-color {
  color: #535EFA;
}
.flex {
  display: flex;
}

.align-c {
  align-items: center;
}

.justify-c {
  justify-content: center;
}

.flex-c {
  display: flex;
  justify-content: center;
}

.flex-v {
  display: flex;
  align-items: center;
}

.flex-b {
  display: flex;
  justify-content: space-between;
}

.flex-g {
  flex-grow: 1;
}

.bg-grey {
  background: #F5F5F5;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.multi-ellipsis {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.b-blur {
  position: relative;
}

.b-blur::after {
  position: absolute;
  content: '';
  bottom: -2px;
  left: 0;
  width: 100%;
  height: 2px;
  background: #c4c4c4;
  filter: blur(10px);
  z-index: 2;
}

.f-w {
  font-size: 13px;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #000;
}

/* 弹出层css */
.pop {
  position: absolute;
  top: 0;
  left: 0;
}
.pop .over-lay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.7);
  z-index: 1;
}
.pop .pop-cont {
  width: 256px;
  height: 281px;
  border-radius: 7px;
  padding-top: 13.65px;
  position: absolute;
  left: 32px;
  top: 95px;
  z-index: 2;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
