.details-wrap {
  min-height: 100vh;
  position: relative;
}

.detail-bg,
.detail-cont {
  position: absolute;
  top: 28rpx;
  left: 28rpx;
  width: 694rpx;
  height: 1150rpx;
}

.detail-cont {
  padding: 20rpx 28rpx;
}

.top .num {
  font-size: 28rpx;
  font-weight: 600;
  color:#202020;
}

.top image {
  width: 106rpx;
  height: 100rpx;
}

.info {
  height: 986rpx;
  overflow-y: auto;
  margin-top: 26rpx;
}

.info .item {
  padding: 24rpx 0;
  border-bottom: 1px solid #f5f5f5;
  align-items: baseline;
}

.item .name {
  min-width: 144rpx;
  max-height: 34rpx;
  text-align: justify;
}

.item .name:after {
  content:'';
  width: 100%;
  height: 0;
  display: inline-block;
  overflow: hidden;
}

.fb {
  font-size: 28rpx;
  font-weight: 600;
  color: #535efa;
}
